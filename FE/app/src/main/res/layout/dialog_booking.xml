<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Đặt lịch mới"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#222222"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/edtReq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Người đặt lịch"
        android:inputType="textPersonName"
        android:autofillHints="name"
        android:minHeight="48dp"
        android:textColor="#222222"
        android:enabled="false"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@id/tvDialogTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edtDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ngày khám (yyyy-MM-dd)"
        android:inputType="date"
        android:autofillHints="date"
        android:minHeight="48dp"
        android:textColor="#222222"
        app:layout_constraintTop_toBottomOf="@id/edtReq"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/edtStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Trạng thái (Pending, Confirmed,...)"
        android:inputType="text"
        android:autofillHints="username"
        android:minHeight="48dp"
        android:textColor="#222222"
        app:layout_constraintTop_toBottomOf="@id/edtDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btnBook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/book_appointment"
        app:layout_constraintTop_toBottomOf="@id/edtStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnCancel"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        app:layout_constraintTop_toBottomOf="@id/edtStatus"
        app:layout_constraintStart_toEndOf="@id/btnBook"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout> 