<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tạo Lịch Làm Việc Mới"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#222222"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"/>

        <!-- Expert ID -->
        <TextView
            android:id="@+id/lblExpertId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Expert ID:"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvDialogTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/edtExpertId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nhập Expert ID (VD: 3)"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="#222222"
            app:layout_constraintTop_toBottomOf="@id/lblExpertId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Date Selection -->
        <TextView
            android:id="@+id/lblSelectedDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chọn ngày làm việc:"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/edtExpertId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnSelectDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chọn ngày"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/lblSelectedDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvSelectedDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ngày đã chọn: Chưa chọn"
            android:textSize="14sp"
            android:textColor="#666666"
            android:background="#F8F8F8"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnSelectDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Start Time Selection -->
        <TextView
            android:id="@+id/lblStartTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Giờ làm việc:"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvSelectedDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnSelectStartTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chọn giờ bắt đầu"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/lblStartTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Giờ bắt đầu: Chưa chọn"
            android:textSize="14sp"
            android:textColor="#666666"
            android:background="#F8F8F8"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnSelectStartTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnSelectEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chọn giờ kết thúc"
            android:backgroundTint="#FF9800"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/tvStartTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Giờ kết thúc: Chưa chọn"
            android:textSize="14sp"
            android:textColor="#666666"
            android:background="#F8F8F8"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnSelectEndTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Active Status -->
        <CheckBox
            android:id="@+id/cbIsActive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lịch hoạt động"
            android:textSize="14sp"
            android:checked="true"
            app:layout_constraintTop_toBottomOf="@id/tvEndTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Buttons -->
        <Button
            android:id="@+id/btnCreate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tạo Lịch"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/cbIsActive"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnCancel"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:backgroundTint="#666666"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/cbIsActive"
            app:layout_constraintStart_toEndOf="@id/btnCreate"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>