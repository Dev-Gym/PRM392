<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Schedule ID -->
        <TextView
            android:id="@+id/tvScheduleId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Schedule ID: 1"
            android:textSize="12sp"
            android:textColor="#666666"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Expert ID -->
        <TextView
            android:id="@+id/tvExpertId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Expert ID: 3"
            android:textSize="12sp"
            android:textColor="#666666"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvScheduleId"
            android:layout_marginTop="2dp"/>

        <!-- Day of Week (New format) -->
        <TextView
            android:id="@+id/tvDayOfWeek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Thứ Hai"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#222222"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvExpertId"
            android:layout_marginTop="8dp"/>

        <!-- Working Hours (New format) -->
        <TextView
            android:id="@+id/tvWorkingHours"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="07:00 - 17:00"
            android:textSize="16sp"
            android:textColor="#666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDayOfWeek"
            android:layout_marginTop="4dp"/>

        <!-- Status (New format) -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoạt động"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvWorkingHours"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Legacy Date field (for backward compatibility) -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#222222"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvExpertId"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <!-- Legacy Time field (for backward compatibility) -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="14sp"
            android:textColor="#666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>